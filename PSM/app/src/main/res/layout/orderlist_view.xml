<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:backgroundTint="@color/Light_gray"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        app:cardBackgroundColor="#F3EFEF"
        app:cardCornerRadius="8dp"
        app:cardElevation="500dp"
        app:cardMaxElevation="@dimen/cardview_compat_inset_shadow"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/OrderDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:labelFor="@id/OrderNo"
                android:text="Order Date:20/04/2022"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/OrderNoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="Order No : "
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/OrderNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/OrderNoText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/CustomerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/OrderNo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:text="Customer : "
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/OrderNo"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/CustomerText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/SalesPersonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Customer"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="3dp"
                android:text="Sales Person : "
                android:textAppearance="?attr/textAppearanceListItem"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/SalesPerson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Customer"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@id/SalesPersonText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/ShippingTypeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SalesPerson"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:text="Shipping Type : "
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/ShippingTypeView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/SalesPerson"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/ShippingTypeText"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/TotalItemOrderPecker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ShippingTypeView"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:text="Total Items :"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/TotalItemOrderViewPecker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ShippingTypeView"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/TotalItemOrderPecker"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/TextViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TotalItemOrderViewPecker"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="3dp"
                android:text="Status :"
                android:textColor="@color/black"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/StatusView"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/TotalItemOrderViewPecker"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/TextViewStatus"
                android:text="jhvjhj"
                android:textColor="@color/green"
                android:textSize="14dp" />

            <Button
                android:id="@+id/btnStart"
                android:layout_width="138dp"
                android:layout_height="40dp"
                android:layout_below="@id/TextViewStatus"
                android:layout_marginStart="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="3dp"
                android:layout_marginBottom="5dp"
                android:background="@color/green"
                android:elevation="150dp"
                android:gravity="center"
                android:text="@string/StartPacking"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnView1"
                android:layout_width="138dp"
                android:layout_height="40dp"
                android:layout_below="@id/TextViewStatus"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/Light_sky"
                android:elevation="150dp"
                android:gravity="center"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>